<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:background="@color/background"
                android:layout_height="wrap_content">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/food_list_item_name"
            android:text="@string/example_food_name"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_toLeftOf="@id/food_list_item_price"
            android:textColor="@color/colorTextPrimary"
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/food_list_item_price"
            android:text="@string/example_price"
            android:textAlignment="center"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@id/food_list_item_name"
            android:gravity="center"
            android:layout_alignBottom="@id/food_list_item_ingredients"
            android:layout_marginEnd="15dp"
            android:textColor="@color/colorTextPrimary"
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/food_list_item_category"
            android:text="@string/example_category"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@id/food_list_item_name"
            android:textColor="@color/colorAccent"
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/food_list_item_ingredients"
            android:text="@string/example_ingredients"
            android:textSize="12sp"
            android:layout_below="@id/food_list_item_name"
            android:layout_toEndOf="@id/food_list_item_category"
            android:layout_toStartOf="@id/food_list_item_price"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/colorTextGrey"
    />
</RelativeLayout>
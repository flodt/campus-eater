<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:background="@color/background"
                android:layout_height="wrap_content">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/food_list_item_name"
            android:text="@string/example_food_name"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="27dp"
            android:textColor="@color/colorTextPrimary"
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/food_list_item_emoji"
            android:text="@string/example_emoji"
            android:textSize="12sp"
            android:layout_below="@id/food_list_item_name"
            android:layout_marginTop="5dp"
            android:layout_marginStart="27dp"
            android:textColor="@color/colorTextGrey"
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/food_list_item_ingredients"
            android:text="@string/example_ingredients"
            android:textSize="12sp"
            android:layout_below="@id/food_list_item_name"
            android:layout_toRightOf="@id/food_list_item_emoji"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/colorTextGrey"
    />
</RelativeLayout>